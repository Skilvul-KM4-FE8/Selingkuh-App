generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // uses connection pooling
}

model Users {
  id       Int    @id @default(autoincrement())
  name     String @unique
  image    String @default("https://st2.depositphotos.com/1104517/11967/v/950/depositphotos_119675554-stock-illustration-male-avatar-profile-picture-vector.jpg")
  email    String @unique
  password String
  createdAt DateTime @default(now())
}